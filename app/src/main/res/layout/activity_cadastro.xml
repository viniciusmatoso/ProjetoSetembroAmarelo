<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Controller.CadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Nome:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:hint="Digite seu nome"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Idade:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:hint="Digite sua idade"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Sexo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/rgSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:theme="@style/RadioButtonStyle"
                android:id="@+id/rbMasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Masculino"
                android:textSize="16sp" />

            <RadioButton
                android:theme="@style/RadioButtonStyle"
                android:textSize="16sp"
                android:layout_marginLeft="80dp"
                android:id="@+id/rbFem"
                android:text="Feminino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:hint="Digite seu email"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Senha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:hint="Digite sua senha"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Confirmação de Senha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtConfirmacao"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:hint="Digite novamente a senha"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

        <Button
            android:textAllCaps="false"
            android:text="Criar nova conta"
            android:background="#DAC721"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btConfimarCadastro"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnConfirmar"/>

        <Button
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:paddingLeft="160dp"
            android:textAllCaps="false"
            android:background="#DAC721"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btVoltar"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnRetornar"/>

        </LinearLayout>

</ScrollView>